  <script>
    function toggleCard(card) {
      card.classList.toggle("active");

      // Collapse others
      const cards = document.querySelectorAll(".card");
      cards.forEach(c => {
        if (c !== card) {
          c.classList.remove("active");
        }
      });
    }
  </script>

